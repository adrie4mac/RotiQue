<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:listDivider">@drawable/divider_recyclerview</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="appBarLayoutStyle">@style/PrimaryAppBarLayout</item>
        <item name="android:listDivider">@drawable/divider_recyclerview</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>
</resources>